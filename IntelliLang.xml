<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="AngularJS" injector-id="xml">
      <display-name>div/@*ngIf</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().matches("*ngIf")).withParent(xmlTag().withLocalName(string().equalTo("div")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>